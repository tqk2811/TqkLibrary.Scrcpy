<Window x:Class="TestRenderWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestRenderWpf" WindowStartupLocation="CenterScreen"
        xmlns:scrcpy="clr-namespace:TqkLibrary.Scrcpy.Wpf;assembly=TqkLibrary.Scrcpy.Wpf"
        mc:Ignorable="d" Loaded="Window_Loaded" Unloaded="Window_Unloaded" Closed="Window_Closed"
        Title="MainWindow" Height="500" Width="400">
    <Window.DataContext>
        <local:MainWindowVM/>
    </Window.DataContext>
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <scrcpy:ScrcpyControl Grid.Column="1" 
                              IsControl="{Binding IsControl}" 
                              Control="{Binding Control}" 
                              ScrcpyUiView="{Binding ScrcpyUiView}"
                              IsMouseHandler="True"
                              IsKeyHandler="True"
                              />
    </Grid>
</Window>
