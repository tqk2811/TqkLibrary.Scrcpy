<UserControl x:Class="TqkLibrary.Scrcpy.Wpf.ScrcpyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TqkLibrary.Scrcpy.Wpf"
             xmlns:DXExtensions="clr-namespace:Microsoft.Wpf.Interop.DirectX;assembly=Microsoft.Wpf.Interop.DirectX"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="host" Loaded="host_Loaded" SizeChanged="host_SizeChanged">
        <Image x:Name="img" Focusable="True" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
               MouseDown="img_MouseDown" MouseUp="img_MouseUp" MouseMove="img_MouseMove"
               MouseEnter="img_MouseEnter" MouseLeave="img_MouseLeave" MouseWheel="img_MouseWheel"
               KeyDown="img_KeyDown" KeyUp="img_KeyUp">
            <Image.Source>
                <DXExtensions:D3D11Image x:Name="InteropImage"/>
            </Image.Source>
        </Image>
    </Grid>
</UserControl>
