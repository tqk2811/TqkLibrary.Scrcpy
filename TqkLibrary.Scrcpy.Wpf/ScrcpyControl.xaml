<UserControl x:Class="TqkLibrary.Scrcpy.Wpf.ScrcpyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TqkLibrary.Scrcpy.Wpf"
             xmlns:DXExtensions="clr-namespace:TqkLibrary.Wpf.Interop.DirectX;assembly=TqkLibrary.Wpf.Interop.DirectX"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="host">
        <Image x:Name="img" Focusable="True" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Image.Source>
                <DXExtensions:D3D11Image x:Name="InteropImage"/>
            </Image.Source>
        </Image>
    </Grid>
</UserControl>
